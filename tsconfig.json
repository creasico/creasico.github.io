{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "module": "ESNext",
    "target": "ESNext",
    "jsx": "preserve",
    "strict": true,
    "sourceMap": true,
    "moduleResolution": "Bundler",
    "skipLibCheck": true,
    "declaration": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "useDefineForClassFields": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ESNext", "DOM", "WebWorker"],
    "typeRoots": ["./src"],
    "types": [
      "vite/client"
    ],
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "exclude": [
    ".github",
    "build",
    "node_modules",
    "vendor",
    "**/*.js",
    "**/*.cjs"
  ],
  "include": [
    "*.config.ts",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.vue"
  ],
  "vueCompilerOptions": {}
}
