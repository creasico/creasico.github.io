{
  "include": ["*.config.ts", "src/**/*.ts", "src/**/*.vue"],
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "module": "esnext",
    "target": "esnext",
    "jsx": "preserve",
    "strict": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "declaration": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "useDefineForClassFields": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ESNext", "DOM", "WebWorker"],
    "typeRoots": ["./src"],
    "types": [
      "vite/client",
      "vue/ref-macros"
    ],
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "vueCompilerOptions": {}
}
