{
  "name": "web",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@8.10.0",
  "scripts": {
    "build": "vite-ssg build",
    "dev": "vite",
    "lint": "eslint --ext .ts,.js,.json,.vue .",
    "postinstall": "simple-git-hooks",
    "preview": "vite preview",
    "test": "vitest run --globals",
    "watch": "vite build --watch"
  },
  "dependencies": {
    "@gtm-support/vue-gtm": "^2.2.0",
    "@vueuse/core": "^10.6.1",
    "@vueuse/head": "^2.0.0",
    "vue": "^3.3.8",
    "vue-i18n": "^9.6.5",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.1",
    "@commitlint/config-conventional": "^18.4.0",
    "@creasico/eslint-config": "^0.0.1",
    "@fontsource/nunito": "^5.0.15",
    "@fontsource/work-sans": "^5.0.15",
    "@iconify/vue": "^4.1.1",
    "@intlify/unplugin-vue-i18n": "^1.5.0",
    "@rollup/pluginutils": "^5.0.5",
    "@types/markdown-it": "^13.0.6",
    "@types/markdown-it-link-attributes": "^3.0.4",
    "@types/node": "^20.9.0",
    "@vitejs/plugin-vue": "^4.4.1",
    "@vue/compiler-sfc": "^3.3.8",
    "@vue/server-renderer": "^3.3.8",
    "@vue/test-utils": "^2.4.1",
    "@yankeeinlondon/meta-builder": "^1.4.0",
    "eslint": "^8.53.0",
    "gray-matter": "^4.0.3",
    "happy-dom": "^12.10.3",
    "lint-staged": "^15.1.0",
    "markdown-it": "^13.0.2",
    "markdown-it-anchor": "^8.6.7",
    "markdown-it-link-attributes": "^4.0.1",
    "markdown-it-prism": "^2.3.0",
    "prismjs": "^1.29.0",
    "rollup": "^4.4.0",
    "simple-git-hooks": "^2.9.0",
    "typescript": "^5.2.2",
    "unplugin-auto-import": "^0.16.7",
    "unplugin-vue-components": "^0.25.2",
    "vite": "^4.5.0",
    "vite-plugin-md": "^0.21.5",
    "vite-plugin-pages": "^0.31.0",
    "vite-plugin-pwa": "^0.16.7",
    "vite-plugin-vue-layouts": "^0.8.0",
    "vite-plugin-windicss": "^1.9.1",
    "vite-ssg": "^0.23.5",
    "vite-ssg-sitemap": "^0.6.0",
    "vitest": "^0.34.6",
    "vue-tsc": "^1.8.22",
    "windicss": "^3.5.6",
    "workbox-window": "^7.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "simple-git-hooks": {
    "commit-msg": "pnpm exec commitlint --edit $1",
    "pre-commit": "pnpm exec lint-staged --allow-empty"
  },
  "lint-staged": {
    "*.{js,json,ts,vue}": [
      "eslint --fix"
    ]
  },
  "eslintConfig": {
    "extends": [
      "@creasico/eslint-config/vue"
    ],
    "globals": {
      "vi": true,
      "vitest": true
    },
    "ignorePatterns": [
      "**/*.test.ts"
    ],
    "parserOptions": {
      "tsconfigRootDir": ".",
      "project": "./tsconfig.json"
    }
  }
}
